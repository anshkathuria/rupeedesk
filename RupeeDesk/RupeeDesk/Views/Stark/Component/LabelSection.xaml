<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RupeeDesk.Views.Stark.Component.LabelSection">
  <ContentView.Padding>
    <OnPlatform x:TypeArguments="Thickness" Android="16,16,16,4" iOS="16,24,16,4" WinPhone="16,16,16,4"/>
  </ContentView.Padding>
  <ContentPage.Resources>
    <ResourceDictionary>
      <OnPlatform x:TypeArguments="x:Double" Android="18" iOS="13" WinPhone="13" x:Key="LabelSectionFontSize" />
    </ResourceDictionary>
  </ContentPage.Resources>
  <ContentView.Content>
    <Label
       FontSize="{StaticResource LabelSectionFontSize}"
       x:Name="Section">
    </Label>
  </ContentView.Content>
</ContentView>